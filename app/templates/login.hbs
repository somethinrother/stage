<div class='box'>
  <form class='field' {{action 'authenticate' on='submit'}}>
    {{form-input label='email' field='identification' type='input' placeholder='Enter email' value=identification}}
    {{form-input label='password' field='password' type='password' placeholder='Enter password' value=password}}

    <div class='field'>
      <div class='control'>
        <button data-test-login='submit' class='button is-link' type='submit'>login</button>
      </div>
    </div>
  </form>
</div>
