{{#each locations as |location|}}
  <p class='panel-block mb-0'>
    {{location.name}} - {{location.description}}
    <button type='button' name='button' class='button is-small' {{action 'toggleEdit' location}}>
      {{#link-to 'authenticated.campaigns.show.locations.edit' location}}
        edit
      {{/link-to}}
    </button>
    <button class='button is-small' type='button' name='button' {{action 'deleteLocation' location}}>delete</button>
    <div class='edit-form hidden' data-toggle-selector={{location.id}}>
      {{outlet}}
    </div>
  </p>
{{/each}}

<h4 class='panel-heading'>Create a New Location</h4>
<form class='panel-heading' {{action 'createLocation' on='submit'}} data-test-campaigns='new-form'>
  {{form-input label='Name' field='name' type='input' placeholder="Enter your location's name" value=model.location.name}}
  {{form-input label='Description' field='description' type='input' placeholder="Enter your location's description" value=model.location.description}}

  <button class='button' type='submit' name='button'>submit</button>
  {{#link-to 'authenticated.campaigns.index' class='button'}}
    back
  {{/link-to}}
</form>
